            td(id="player1", class="card_container")
            td(rowspan="2", colspan="2")
            td(id ="player_3", class="text-left") 玩家 4
            td(id="player3", class="card_container")
          tr
            td
              input(type="button", value="排序", id="sort_1", class="sort_btn")
              input(type="button", value="叫牌", id="call_1", class="call_btn")
            td(id="player_r1", class="card_container")
            td
              input(type="button", value="排序", id="sort_3", class="sort_btn")
              input(type="button", value="叫牌", id="call_3", class="call_btn")
            td(id="player_r3", class="card_container")
          tr(id="player_row_0", class="player_container")
            td(rowspan="2", colspan="2")
            td(id = "player_0", class="text-left") 玩家 1
            td(id="player0", class="card_container")
            td(rowspan="2", colspan="2")
          tr
            td
              input(type="button", value="排序", id="sort_0", class="sort_btn")
              input(type="button", value="叫牌", id="call_0", class="call_btn")
            td(id="player_r0", class="card_container")

