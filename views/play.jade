  body
    .title
      h1 扑克牌模拟器
    .option-container
      select#ts
        option(value="3") 3人
        option(value="4", selected=true) 4人
      input(type="button", id="num_players", value="OK")
      label 发牌起始位
      select#fs
        option(value="1") 玩家1
        option(value="2") 玩家2
        option(value="3") 玩家3
        option(value="4")#fs4 玩家4
      input(type="button", id="reload_page", value="重新开始")
    .page-container
      h2 牌面
      table.table-fill.table.table-striped
        tbody.table-hover
          tr(id="player_row_2", class="player_container")
            td(rowspan="2", colspan="2")
            td(id = "player_2", class="text-left") 玩家 3
            td(id="player2", class="card_container")
            td(rowspan="2", colspan="2")
          tr
            td
              input(type="button", value="排序", id="sort_2", class="sort_btn")
              input(type="button", value="叫牌", id="call_2", class="call_btn")
            td(id="player_r2", class="card_container")
          tr(id="player_row_1", class="player_container")
